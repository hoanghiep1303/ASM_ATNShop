/*Search bar*/
@import url(https://fonts.googleapis.com/css?family=Open+Sans);

#home{
  background: pink;
  font-family: 'Open Sans', sans-serif;
}

#srch {
  width: 100%;
  position: relative;
  display: flex;
}

#srchT {
  width: 100%;
  border: 2px solid #00B4CC;
  border-right: none;
  padding: 5px;
  height: 40px;
  border-radius: 5px 0 0 5px;
  outline: none;
  color: #9DBFAF;
}
#srchT:focus{
  color: #00B4CC;
}

#srchB {
  width: 40px;
  height: 40px;
  border: 2px solid #00B4CC;
  background: #00B4CC;
  text-align: center;
  color: #fff;
  border-radius: 0 5px 5px 0;
  cursor: pointer;
  font-size: 20px;
}

/*Resize the wrap to see the search bar change!*/
#srchWrap{
  width: 53%;
  position: absolute;
  top: 50%;
  left: 63%;
  transform: translate(-50%, -50%);
}

/* Footer */
.footer-basic {
  padding:40px 0;
