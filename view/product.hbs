<!DOCTYPE html>
<html>
{{>head title=this.title subpage='Page X' }}

<body>
    {{>header  title=this.title}}

    <main>
        <ol>
            {{!<h1>Fruit Live Search</h1>
            <form>
            <input type="text" size="30" onkeyup="showResult(this.value)" />
            <div id="livesearch" class="hide"></div>
            </form>
            <script src="models/search.js"></script>}}

            <div id="producttop"class="container" style="margin-top: 60px;">
            <h1 style="text-align: center;">{{title}}</h1>
            <form method="get" action="\product\new">
                <button class="addproductbtn" type="submit">Add a new product</button>
                <br>
                <br>
                <button id="btnex" type="button" class="block">Delete product</button>
                <br>
                <button id="btnex" type="button" class="block">Edit product</button>
            </form>

            {{#each product}}
            {{!add id="productList, "}}
            <li id="productsList" style="display:inline-block">
                <div id="productcard" class="card">
                    <H2 id="productName">{{ProductName}}</H2>
                    <img class="productimg" src="/{{ImgLink}}">
                    <H3 id="ppp" class="price">Giá: {{Price}}</H3>
                    <BR> Thông tin sản phẩm:
                    <p>
                        {{Information}}
                    </p>
                    <BR> Made in: {{Madein}}
                    <p><button id="cardbtn">Add to Cart</button></p>
                </div>
            </li>
            {{/each}}
            </div>
            <br>
        </ol>
    </main>
    

    {{>footer}}
</body>

</html>

</html>